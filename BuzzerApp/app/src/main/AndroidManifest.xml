<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dskrundz.buzzerapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MultiplayerActivity"
            android:label="@string/title_activity_multiplayer" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dskrundz.buzzerapp.MainActivity" />
        </activity>
        <activity
            android:name=".MultiplayerGameActivity"
            android:label="@string/title_activity_multiplayer_game" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dskrundz.buzzerapp.MultiplayerActivity" />
        </activity>
        <activity
            android:name=".SinglePlayerActivity"
            android:label="@string/title_activity_single_player" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dskrundz.buzzerapp.MainActivity" />
        </activity>
        <activity
            android:name=".StatusActivity"
            android:label="@string/title_activity_status" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dskrundz.buzzerapp.MainActivity" />
        </activity>
    </application>

</manifest>
